<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" />
        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="SOMETIMES" />
        <RowConstraints vgrow="SOMETIMES" />
        <RowConstraints vgrow="SOMETIMES" />
    </rowConstraints>
    <Label alignment="CENTER" focusTraversable="false" text="Login :">
        <GridPane.margin>
            <Insets />
        </GridPane.margin>
    </Label>
    <Label alignment="CENTER" focusTraversable="false" text="Mot de passe :" GridPane.rowIndex="1">
        <GridPane.margin>
            <Insets top="5.0" />
        </GridPane.margin>
    </Label>
    <TextField fx:id="loginTextField" GridPane.columnIndex="1">
        <GridPane.margin>
            <Insets left="5.0" />
        </GridPane.margin>
    </TextField>
    <PasswordField fx:id="userPasswordTextField" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <GridPane.margin>
            <Insets left="5.0" top="5.0" />
        </GridPane.margin>
    </PasswordField>
    <Button fx:id="loginButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
            onAction="#loginAction" text="Connexion" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <GridPane.margin>
            <Insets top="5.0" />
        </GridPane.margin>
    </Button>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</GridPane>
